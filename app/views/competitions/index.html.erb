<h1>Listing competitions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Competitors</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @competitions.each do |competition| %>
  <tr>
    <td><%= link_to competition.title , competition %></td>
    <td><%= competition.users.length %></td>
    <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
    <td><%= link_to 'Destroy', competition, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

